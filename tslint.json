{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "indent": [
            true,
            "spaces"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "one-variable-per-declaration": false,
        "prefer-const": true
    }
}
